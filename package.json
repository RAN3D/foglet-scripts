{
  "name": "foglet-scripts",
  "version": "0.2.4",
  "description": "Build and test foglet applications with minimal configuration",
  "main": "src/utils/utils.js",
  "bin": {
    "foglet-scripts": "./bin/foglet-scripts.js"
  },
  "scripts": {
    "lint": "standard",
    "test": "jest --notify",
    "test-build": "node ./bin/foglet-scripts.js build -c ./tests/webpack-custom/webpack-custom-config.js && node tests/webpack-custom/indexTest.js",
    "coverage": "jest --notify --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RAN3D/foglet-scripts.git"
  },
  "keywords": [
    "foglet",
    "scripts",
    "fog computing",
    "test harness",
    "development"
  ],
  "author": "Thomas Minier <thomas.minier@univ-nantes.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RAN3D/foglet-scripts/issues"
  },
  "homepage": "https://github.com/RAN3D/foglet-scripts#readme",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "foglet-signaling-server": "^0.3.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.1.1",
    "karma-express-http-server": "0.0.1",
    "karma-istanbul": "0.0.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^2.0.5",
    "lodash.merge": "^4.6.0",
    "mocha": "^3.5.3",
    "standard": "^10.0.3",
    "standard-loader": "^6.0.1",
    "uuid": "^3.1.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "jest": "^21.2.1",
    "karma-firefox-launcher": "^1.0.1"
  },
  "standard": {
    "env": [
      "node",
      "jest"
    ],
    "globals": [
      "assert"
    ]
  },
  "jest": {
    "verbose": true,
    "testRegex": "tests/.*/.*-test\\.js$"
  }
}
